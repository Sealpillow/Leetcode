#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>

int main()
{
    int len;
    double x=0,y=0; // value is big hence double instead of float
    char input[31],*p;
    fgets(input,31,stdin); //input:111
    if(p=strchr(input,'\n'))
    {
        *p='\0';
    }
    len = strlen(input);

    for (int i=0;i<len;i++) //len = 3
    {
        if(input[i]=='1')
        {
            x+= pow(2,len-1-i); // e.g len-1-i = 3-1-0,3-1-1,3-1-2
            // x+=2^2,2^1,2^0
            // x+= 4,2,1
            //total x=7;
        }
        else if(input[i]=='2')
        {
            y+= pow(2,len-1-i);
        }
        else if(input[i]=='3')
        {
            x+= pow(2,len-1-i);
            y+= pow(2,len-1-i);
        }
        else
        {

        }
    }

    printf("%d %d %d",len,(int)x,(int)y);

}
